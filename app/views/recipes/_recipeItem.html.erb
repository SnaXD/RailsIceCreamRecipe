<div class="h-[500] w-[450] bg-gray-100 rounded-[64] border-solid border-2 border-gray-300 drop-shadow-xs">
  <div class="container flex justify-center pt-10">
    <div class="h-[300] w-[375] bg-blue-100 rounded-[38] overflow-hidden drop-shadow-xs">
      <% if recipe&.images&.attached? && recipe.images.any? %>
        <%= image_tag recipe.images.first, class: "w-full h-full object-cover" %>
      <% else %>
        <div class="h-full w-full bg-gray-200 flex items-center justify-center">
          <span>No Image Available</span>
        </div>
      <% end %>
    </div>
  </div>
  <div class="flex justify-center">
    <h1 class="text-4xl pt-8 font-bold"><%=recipe.title%></h1>
  </div>
</div>


